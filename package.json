{
  "name": "beat-the-bet-backend",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "build:prod": "npm i && npm run migrate:deploy && npm run build",
    "start": "node ./dist/index.js",
    "load:env:test": "dotenv -e .env.test",
    "load:env:dev": "dotenv -e .env.development",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "npm run load:env:dev -- prisma migrate dev",
    "migrate:test": "npm run load:env:test -- prisma migrate dev",
    "test:e2e": "npm run load:env:test -- jest -- --passWithNoTests --runInBand",
    "test:coverage": "npm run load:env:test -- jest -- --passWithNoTests --runInBand --coverage --collectCoverageFrom='./src/**'",
    "dev": "npm run load:env:dev -- nodemon ./src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "joi": "^17.10.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.7.1",
    "@types/nodemon": "^1.19.3",
    "@types/supertest": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.3.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}